{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "outDir": ".",
        "rootDir": "..",
        "baseUrl": ".",
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true
    },
    "include": ["src", "../types"],
    "exclude": ["node_modules"]
}
