{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "../dist",
        "rootDir": "./src",
        "baseUrl": ".",
        "allowJs": false,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "Node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react-jsx"
    },
    "include": ["src", "../types"],
    "exclude": ["node_modules"]
}
